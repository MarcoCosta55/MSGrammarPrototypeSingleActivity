<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewSubject1"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView1"
        app:layout_constraintEnd_toStartOf="@+id/imageViewVerb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProperNounSymbol"
        app:srcCompat="@drawable/outline_proper_noun" />

    <ImageView
        android:id="@+id/imageViewVerb"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView2"
        app:layout_constraintEnd_toStartOf="@+id/imageViewNoun"
        app:layout_constraintStart_toEndOf="@+id/imageViewSubject1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewVerbSymbol"
        app:srcCompat="@drawable/outline_verb1" />

    <ImageView
        android:id="@+id/imageViewNoun"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView3"
        app:layout_constraintEnd_toStartOf="@+id/imageViewAdjective"
        app:layout_constraintStart_toEndOf="@+id/imageViewVerb"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNounSymbol"
        app:srcCompat="@drawable/outline_noun1" />

    <ImageView
        android:id="@+id/imageViewAdjective"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewNoun"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAdjectiveSymbol"
        app:srcCompat="@drawable/outline_adjective1" />

    <ImageView
        android:id="@+id/imageViewProperNounSymbol"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewSubject1"
        app:layout_constraintEnd_toStartOf="@+id/imageViewVerbSymbol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkWorkButton"
        app:srcCompat="@drawable/symbol_noun" />

    <ImageView
        android:id="@+id/imageViewVerbSymbol"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewVerb"
        app:layout_constraintEnd_toStartOf="@+id/imageViewNounSymbol"
        app:layout_constraintStart_toEndOf="@+id/imageViewProperNounSymbol"
        app:layout_constraintTop_toBottomOf="@+id/checkWorkButton"
        app:srcCompat="@drawable/symbol_verb" />

    <ImageView
        android:id="@+id/imageViewNounSymbol"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewNoun"
        app:layout_constraintEnd_toStartOf="@+id/imageViewAdjectiveSymbol"
        app:layout_constraintStart_toEndOf="@+id/imageViewVerbSymbol"
        app:layout_constraintTop_toBottomOf="@+id/checkWorkButton"
        app:srcCompat="@drawable/symbol_noun" />

    <ImageView
        android:id="@+id/imageViewAdjectiveSymbol"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewAdjective"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewNounSymbol"
        app:layout_constraintTop_toBottomOf="@+id/checkWorkButton"
        app:srcCompat="@drawable/symbol_adjective" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/recyclerView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSubject1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/recyclerView3"
        app:layout_constraintStart_toEndOf="@+id/recyclerView1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewVerb" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/recyclerView4"
        app:layout_constraintStart_toEndOf="@+id/recyclerView2"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNoun" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recyclerView3"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAdjective" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/checkWorkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/imageViewAdjectiveSymbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/checkbox_on_background" />

</androidx.constraintlayout.widget.ConstraintLayout>